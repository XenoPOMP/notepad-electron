{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "paths": {
      "@components/*": ["renderer/assets/components/*"],
      "@fonts/*": ["renderer/assets/fonts/*"],
      "@hooks/*": ["renderer/assets/hooks/*"],
      "@images/*": ["renderer/assets/images/*"],
      "@interfaces/*": ["renderer/assets/interfaces/*"],
      "@pages/*": ["renderer/assets/pages/*"],
      "@redux/*": ["renderer/assets/redux/*"],
      "@styles/*": ["renderer/assets/styles/*"],
      "@utils/*": ["renderer/assets/utils/*"]
    }
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
